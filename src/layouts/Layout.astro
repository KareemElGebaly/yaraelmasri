---
// src/layouts/Layout.astro
const { title = "مدونة يارا", description = "" } = Astro.props;
---
<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&family=Noto+Sans+SC&family=Noto+Sans:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Global styles -->
    <style>
      :root {
        font-family: 'Cairo', 'Noto Sans', 'Noto Sans SC', sans-serif;
        color: #1a1a1a;
        background-color: #fdfdfd;
        line-height: 1.8;
      }

      body {
        margin: 0;
        padding: 0;
        direction: rtl;
      }

      header {
        padding: 2rem 1rem;
        text-align: center;
        border-bottom: 1px solid #ddd;
      }

      header h1 {
        margin: 0;
        font-size: 2rem;
      }

      main {
        padding: 2rem 1rem;
        max-width: 768px;
        margin: auto;
      }

      footer {
        text-align: center;
        font-size: 0.9rem;
        color: #888;
        margin: 3rem 0 1rem;
      }

      a {
        color: #1a1a1a;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">مدونة يارا</a></h1>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      © {new Date().getFullYear()} يارا المصري — جميع الحقوق محفوظة
    </footer>
  </body>
</html>